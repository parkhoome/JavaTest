package loop;

public class Looptest1 {
	public static void main(String[] args) {
//irk j qhek zmrjsk rkxdmfEO 
		for (int i = 1; i <= 5; i++) {
			
			for (int j = 1; j<=5; j++) {
				if (i <= j) System.out.println("*");
				else System.out.print(" ");
			}
			System.out.println();
		}
		System.out.println("종료");
	}
}

//***** 1행은 5열까지 * 출력
//****  2행은 4열까지 
//i +j =6   => j = 6-i
/*
*****  1행 1열부터 1,2,3,4,5,열 * 출력
 ****  2행2~5*
  ***  3행 3~5
   **
    *
    *
    행 <= 열 , i<=j
*/

/*
    *  1행 5열
   **  2행 4.5열
  ***  3행 3.4.5
 ****
*****
*/